<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/ivPopupBase"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_166sdp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:src="@drawable/popbg_600"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivPopupBase"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_14sdp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btHome"
            android:layout_width="@dimen/_78sdp"
            android:layout_height="@dimen/_57sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/home_bt_600"/>

        <ImageButton
            android:id="@+id/btReplay"
            android:layout_width="@dimen/_78sdp"
            android:layout_height="@dimen/_57sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/replay_bt_600"/>

    </LinearLayout>


</RelativeLayout>