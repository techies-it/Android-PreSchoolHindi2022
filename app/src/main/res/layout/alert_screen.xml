<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/ivPopupBase"
        android:layout_width="@dimen/_232sdp"
        android:layout_height="@dimen/_158sdp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:src="@drawable/popbg_320"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivPopupBase"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_24sdp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btHome"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/homes_button_320"/>

        <ImageButton
            android:id="@+id/btReplay"
            android:layout_width="@dimen/_72sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/replays_button_320"/>

    </LinearLayout>


</RelativeLayout>