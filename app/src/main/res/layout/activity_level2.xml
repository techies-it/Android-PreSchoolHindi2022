<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.techies.preschoolhindi.ui.Level2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_320"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_56sdp"
        android:layout_marginStart="@dimen/_56sdp"
        android:layout_marginTop="-50dp"
        android:layout_toEndOf="@+id/backBT"
        android:layout_toRightOf="@+id/backBT">

        <ImageView
            android:id="@+id/sunRaysIV"
            android:layout_width="@dimen/_137sdp"
            android:layout_height="@dimen/_137sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/sunray_320"/>

        <ImageView
            android:id="@+id/sunIV"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="@dimen/_58sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/sun_320"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/cloud0IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/backBT"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="-600dp"
        android:layout_marginRight="-600dp"
        android:src="@drawable/cloud0_600"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/cloud6IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/backBT"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:layout_toEndOf="@+id/cloud0IV"
        android:layout_toRightOf="@+id/cloud0IV"
        android:src="@drawable/cloud6_600"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/cloud1IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cloud0IV"
        android:layout_marginEnd="-300dp"
        android:layout_marginRight="-300dp"
        android:src="@drawable/cloud1_600"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/cloud7IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backBT"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:layout_toEndOf="@+id/cloud1IV"
        android:layout_toRightOf="@+id/cloud1IV"
        android:src="@drawable/cloud7_600"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/cloud3IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-500dp"
        android:layout_marginRight="-500dp"
        android:src="@drawable/cloud3_600"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/backBT"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:background="@drawable/back_button_320"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/boardsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/smallBoardIV"
                        android:layout_width="@dimen/_162sdp"
                        android:layout_height="@dimen/_178sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/blackboard_320"/>

                    <RelativeLayout
                        android:id="@+id/hiddenLayout"
                        android:layout_width="@dimen/_144sdp"
                        android:layout_height="@dimen/_104sdp"
                        android:layout_alignEnd="@+id/smallBoardIV"
                        android:layout_alignRight="@+id/smallBoardIV"
                        android:layout_alignTop="@+id/smallBoardIV"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_22sdp">

                        <TextView
                            android:id="@+id/smallBoardLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:gravity="center"
                            android:text="Vowels (स्वर)"
                            android:textColor="@android:color/white"
                            android:textSize="15sp"/>

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/smallBoardLabel"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/numberLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_8sdp">

                                <TextView
                                    android:id="@+id/characterTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="अ"
                                    android:textColor="@android:color/white"
                                    android:textSize="60sp"/>

                            </RelativeLayout>


                            <LinearLayout
                                android:id="@+id/linearLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivFruitImage"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/pomegranate_320"/>

                                <TextView
                                    android:id="@+id/tvFruitName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="अनार"
                                    android:textColor="@android:color/white"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/char1"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/button_small_1_320"
                        android:clickable="true"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"/>

                    <TextView
                        android:id="@+id/char2"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/button_small_3_320"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"/>


                    <TextView
                        android:id="@+id/char3"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:background="@drawable/button_small_5_320"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btPrevious"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/previous_button_320"/>

                    <ImageButton
                        android:id="@+id/btNext"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/next_button_320"/>

                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_24sdp">

                <ImageView
                    android:id="@+id/bigBoardIV"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_242sdp"
                    android:src="@drawable/big_blackboard_320"/>

                <RelativeLayout
                    android:id="@+id/baseLayout"
                    android:layout_width="@dimen/_234sdp"
                    android:layout_height="@dimen/_208sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:id="@+id/contentLayoutGameLevel2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:splitMotionEvents="false">

                        <!--<View
                            android:layout_width="224dp"
                            android:layout_height="196dp"
                            android:background="@android:color/white"/>-->

                    </RelativeLayout>


                </RelativeLayout>

                <ImageButton
                    android:id="@+id/dusterIB"
                    android:layout_width="@dimen/_44sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignBottom="@+id/bigBoardIV"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:background="@drawable/duster_button_320"/>

                <ImageButton
                    android:id="@+id/chalkIB"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_alignBottom="@+id/bigBoardIV"
                    android:layout_alignEnd="@+id/bigBoardIV"
                    android:layout_alignRight="@+id/bigBoardIV"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_24sdp"
                    android:background="@drawable/chalk_button_320"/>


            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_134sdp">

            <ImageView
                android:id="@+id/loweUpper"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="@dimen/_34sdp"
                android:src="@drawable/capital_a_600"/>

            <TextView
                android:id="@+id/swarAlphabetsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/loweUpper"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="अ"
                android:textColor="@android:color/black"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/varnmalaAlphabetsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/loweUpper"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:text="क"
                android:textColor="@android:color/black"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <View
                    android:id="@+id/swarAlphabets"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/transparent_button_600"/>

                <View
                    android:id="@+id/varnmalaAlphabets"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:background="@drawable/transparent_button_600"/>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
